package br.inatel.dm110.api;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Path("/hello")
public interface CalcService {

	@GET
	@Path("/say/somar/{op1}/{op2}")
	@Produces(MediaType.TEXT_HTML)
	String doAddition(@PathParam("op1") int op1,
			@PathParam("op2") int op2);
	
	@GET
	@Path("/say/subtrair/{op1}/{op2}")
	@Produces(MediaType.TEXT_HTML)
	String doSubtraction(@PathParam("name") String name);
	
	@GET
	@Path("/say/multiplicar/{op1}/{op2}")
	@Produces(MediaType.TEXT_HTML)
	String doMultiplication(@PathParam("name") String name);
	
	@GET
	@Path("/say/dividir/{op1}/{op2}")
	@Produces(MediaType.TEXT_HTML)
	String doDivision(@PathParam("name") String name);

}
